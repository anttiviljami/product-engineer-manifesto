{
  "name": "product-engineer-manifesto",
  "description": "productengineer.org",
  "private": true,
  "license": "MIT",
  "author": "Viljami Kuosmanen <viljami@viljami.io>",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run \"/^watch:.*/\"",
    "watch:start": "vite",
    "watch:tailwind": "nodemon --exec \"pnpm run tailwind\" --ext js,json,html,css -w .",
    "build": "pnpm run tailwind",
    "tailwind": "npx tailwindcss -o main.css --minify"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4"
  }
}
